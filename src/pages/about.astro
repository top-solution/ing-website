---
import { getCollection } from "astro:content";
import { Icon } from "astro-icon";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
import Section from "../components/Section.astro";
import type { NavItem } from "../components/Nav.astro";
import HomeSection from "../components/HomeSection.astro";

const title = "Mario Rossi";
const description = "Mario Rossi";

const allAboutSections = await getCollection('about');

---

<Layout title={title} description={description} activeHeader="home">
	{
		allAboutSections.map(section => (
			<HomeSection
				title={section.data.title}
				section={section}
			/>
		))
	}
</Layout>

<style>
	.box-content > img {
		width: 100%;
	}

	.main-box-container {
		background-image: url("/public/home-background-1.jpg");
		background-size: cover;
		color: var(--palette-white);
		flex-direction: row;
		justify-content: center;
	}

	.main-box-content {
		flex-direction: row;
		align-items: center;
		gap: 60px;
	}

	.main-box-container p {
		margin: 0;
	}

	.secondary-box-content {
		flex-direction: column;
		align-items: flex-start;
	}

	.blue-box-container {
		background-color: var(--palette-blue);
		color: var(--palette-white);
	}

	.cta-box-container {
		min-height: 0;
	}

	.cta-box-content {
		flex-direction: row;
		justify-content: flex-end;
	}
</style>
