	</section>
</Layout>

<style>
	.main-box-content {
		flex-wrap: wrap;
		justify-content: space-between;
		align-items: stretch;
    	flex-direction: column;
		gap: var(--space-xs);
	}
	h3 {
		text-transform: none;
		margin-block-end: 0;
	}
	p {
		margin-block-start: 0;
		margin-block-end: 0;
	}
	dl {
		display: grid;
		grid-template-columns: max-content auto;
		margin-block-start: 0;
		margin-block-end: 0;
	}
	dt {
		grid-column-start: 1;
	}
	dd {
		grid-column-start: 2;
	}
	.button-container {
		display: flex;
	} 
	.breadcrumb {
		list-style: none;
		flex-direction: row;
		display: flex;
		gap: var(--space-xs);
		margin-block-start: 0;
		margin-block-end: 0;
		padding-inline-start: 0;
	}
	.breadcrumb img {
		height: 24px;
	}
	.breadcrumb li {
		margin-block-start: 0;
		margin-block-end: 0;
	}
	.project-name {
		font-weight: 500;
	}
</style>
