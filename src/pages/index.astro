---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import HomeSection from "../components/HomeSection.astro";

const title = "Mario Rossi";
const description = "Mario Rossi";

const allLandingSections = await getCollection("homepage");
---

<Layout title={title} description={description} activeHeader="home">
	{
		allLandingSections.map((section) => (
			<HomeSection
				title={section.data.title}
				backgroundImage={section.data.backgroundImage}
				ctaText={section.data.ctaText}
				ctaHref={section.data.ctaHref}
				section={section}
			/>
		))
	}
</Layout>

